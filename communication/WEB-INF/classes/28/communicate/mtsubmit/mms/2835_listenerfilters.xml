<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- 彩信网关submit队列监听器的相关过滤配置begin -->
	<!-- 敏感词过滤器 -->
	<bean id="mmsKeyWordFilter2835" class="com.lxt2.mmsgateway.filter.MmsResourceKeyWordFilter">
		<property name="idirtyword" ref="dirtyWord" />
		<property name="commonResourceCenter" ref="commonResourceCenter" />
		<property name="mmsgConstants" ref="mmsgConstants2835" />
		<property name="exceptionHandler" ref="mmsExceptionHandle" />
		<property name="hub" ref="hubImpl" />
	</bean>
	<!-- 网关通道敏感词过滤器 -->
	<bean id="mmsGwKeyWordFilter2835" class="com.lxt2.mmsgateway.filter.MmsGwResourceKeyWordFilter">
		<property name="idirtyword" ref="gwDirtyWord" />
		<property name="commonResourceCenter" ref="commonResourceCenter" />
		<property name="mmsgConstants" ref="mmsgConstants2835" />
		<property name="exceptionHandler" ref="mmsExceptionHandle" />
		<property name="hub" ref="hubImpl" />
	</bean>
	<!--模板替换过滤器 -->
	<bean id="mmContentCreateFilter2835" class="com.lxt2.mmsgateway.filter.MmContentCreateFilter">
		<property name="mmContentCreator" ref="mmContentCreator2835" />
		<property name="mmsgConstants" ref="mmsgConstants2835" />
		<property name="exceptionHandler" ref="mmsExceptionHandle" />
		<property name="hub" ref="hubImpl" />
	</bean>
	<!--入发送队列监听器 -->
	<bean id="inMmsSendQueueFilter2835" class="com.lxt2.mmsgateway.filter.InMmsSendQueueFilter">
		<property name="mmsSendQueue" ref="mmsSendQueue2835" />
		<property name="exceptionHandler" ref="mmsExceptionHandle" />
		<property name="hub" ref="hubImpl" />

	</bean>
	<!-- 彩信网关submit队列监听器的相关过滤配置end -->

	<!-- 彩信网关send队列监听器的相关过滤配置begin -->
	<!--彩信速度控制过滤器 -->
	<bean id="mmsSpeedControlFilter2835" class="com.lxt2.mmsgateway.filter.MmsSpeedControlFilter" init-method="init">
	<property name="gatewayConfig" ref="gatewayXml"/>
	<property name="mm7Mmsc" ref="mmsgConstants2835"/>
		<property name="equidistributionSpeeder">
			<bean class="com.techcenter.speed.IntervalSecondSpeeder">
				<constructor-arg index="0" value="100" />
			</bean>
		</property>
	</bean>
	<!--彩信下发过滤器 -->
	<bean id="mmsContentSendFilter2835" class="com.lxt2.mmsgateway.filter.MmsContentSendFilter">
		<property name="mmsSender" ref="mmsSender2835" />
		<property name="mmsSendQueue" ref="mmsSendQueue2835" />
		<property name="mmsgConstants" ref="mmsgConstants2835" />
		<property name="exceptionHandler" ref="mmsExceptionHandle" />
		<property name="respInHubService" ref="respInHubService2835" />
		<property name="sid" ref="ndSid" />
		<property name="hub" ref="hubImpl" />
		<property name="dataGather" ref="mtsDataGather2835" />
	</bean>
	<!-- 彩信网关send队列监听器的相关过滤配置end -->

	<bean id="respInHubService2835" class="com.lxt2.mmsgateway.service.RespInHubService">
		<property name="exceptionHandle" ref="mmsExceptionHandle" />
		<property name="sid" ref="ndSid" />
		<property name="hub" ref="hubImpl" />
		<property name="saveLogger" ref="saveLogger" />
	</bean>

	<!-- 上行监控过滤 -->

	<!-- 彩信上行信息入Hub过滤器 -->
	<bean id="mmsDeliverInHubFilter2835" class="com.lxt2.mmsgateway.filter.MmsDeliverInHubFilter" />

	<!-- 彩信上行预处理队列监听器相关过滤配置end -->


	<!-- 成功彩信下行请求进入彩信下行记录表过滤器 -->

	<!-- 彩信状态报告进入彩信状态报告表过滤器 -->
	<bean id="mmsReportInHubFilter2835" class="com.lxt2.mmsgateway.filter.MmsReportInHubFilter" />

	<!-- 彩信网关submit队列监听器 -->
	<bean id="mmsSubmitQueueListener2835" class="com.lxt2.mmsgateway.listener.MmsSubmitQueueListener" init-method="init" destroy-method="destroy">
		<property name="hub" ref="hubImpl" />
		<property name="maxWorker" value="3" />
		<property name="filters">
			<list>	
				<!--模板替换过滤器 要在最上面-->			
				<ref local="mmContentCreateFilter2835" />
				<ref local="mmsKeyWordFilter2835" />
				<ref local="mmsGwKeyWordFilter2835" />
				<ref local="inMmsSendQueueFilter2835" />
			</list>
		</property>
	</bean>
	<!--彩信发送队列监听器 -->
	<bean id="mmsSendQueueListener2835" class="com.lxt2.mmsgateway.listener.MmsSendQueueListener"
		init-method="init" destroy-method="destroy">
		<property name="maxWorker" value="3" />
		<property name="filters">
			<list>
				<ref local="mmsSpeedControlFilter2835" />
				<ref local="mmsContentSendFilter2835" />
			</list>
		</property>
	</bean>

</beans>
